<p>Shamango in the house</p>
<!-- if someone is logged in, show only their posts and their friends' posts -->

<!-- match to id of current user or user's friends -->
<% member = Member.find_by_id(session[:logged_in_user_id]) %>
<% allowed_ids = [member.id] %>
<% Friendship.find_each do |friendship| %>
  <% if friendship.member_id_one == member.id && friendship.accepted %>
    <% allowed_ids << friendship.member_id_two %>
  <% elsif friendship.member_id_two == member.id && friendship.accepted %>
    <% allowed_ids << friendship.member_id_one %>
  <% end %>
<% end %>
<% Post.all.reverse.each do |p| %>
  <% if allowed_ids.include?(p.member.id) %>
    <p>
      <%reciever = Member.find_by_id(p.post_reciever)%>
    <a href="/<%="#{p.member.first_name.split.join}_#{p.member.last_name}"%>"><%="#{p.member.first_name}"%></a> >> 
    <a href="/<%="#{reciever.first_name.split.join}_#{reciever.last_name}"%>"><%="#{reciever.first_name}"%></a>
    <%=": #{p.contents} at #{p.created_at.hour}:#{p.created_at.min}:#{p.created_at.sec} on #{p.month(p.created_at.month)} #{p.created_at.day}, #{p.created_at.year}"%> </p>
  <% end %> 
<% end %>
